<html lang="en">
      <%- include('./partials/head')%>
<body>
      <h2><%= productToEdit.name%></h2>
      <form action="/products/<%= idProduct%>/actualizar?_method=PUT" method="POST">
            
            <div class="p-10px">
                  <label for="">Categoria</label>
                  <input type="text" name="name" value="<%= productToEdit.category%>">
            </div>
            
            <div>
                  <button>Editar </button>
            </div>
      </form>
      <div>
            <a href="/products/<%= idProduct%>">Volver al producto <%= idProduct%></a>
      </div>
</body>
</html>